 <querysource>
  <name>head</name>
  <sql>SELECT item_number,
       item_descrip1,
       item_descrip2,
       uom_name
  FROM item JOIN uom ON (item_inv_uom_id=uom_id)
 WHERE (item_id=&lt;? value(&quot;item_id&quot;) ?>);</sql>
 </querysource>
 <querysource>
  <name>detail</name>
  <sql>SELECT vend_name,
       itemsrc_vend_item_number,
       itemsrc_vend_uom,
       formatQty(itemsrc_invvendoruomratio) as f_uomratio
  FROM itemsrc, vend
 WHERE ( (itemsrc_vend_id=vend_id)
   AND (itemsrc_item_id=&lt;? value(&quot;item_id&quot;) ?>) );</sql>
 </querysource>
